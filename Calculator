            <input type="button" value="1"  onclick="display.value +='1' " class="dgray">
            <input type="button" value="2"  onclick="display.value +='2' " class="dgray">
            <input type="button" value="3"  onclick="display.value +='3' " class="dgray">
            <input type="button" value="+"  onclick="display.value +='+' " class="orange">
               </div>    


               <div>
                <input type="button" value="0"  class="zero" onclick="display.value +='0' " >
                <input type="button" value="."  onclick="display.value +='.' " class="dgray">
                <input type="button" value="="onclick="display.value = eval(display.value) "  class="orange">
