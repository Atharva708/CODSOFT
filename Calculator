   <div>
<input type="button" value="AC"  onclick="display.value ='' " class="gray">
<input type="button" value="DE" onclick="display.value = display.value.toString().slice(0,-1) " class="gray">
<input type="button" value="%" onclick="display.value = (display.value)/100" class="gray">
<input type="button" value="/"  onclick="display.value +='/' " class="orange">
   </div>

   <div>
    <input type="button" value="7" onclick="display.value +='7' " class="dgray">
    <input type="button" value="8"  onclick="display.value +='8' " class="dgray">
    <input type="button" value="9"  onclick="display.value +='9' "class="dgray">
    <input type="button" value="X"  onclick="display.value +='*' " class="orange">
       </div>

       <div>
        <input type="button" value="4"  onclick="display.value +='4' " class="dgray">
        <input type="button" value="5" onclick="display.value +='5' " class="dgray">
        <input type="button" value="6"  onclick="display.value +='6' " class="dgray">
        <input type="button" value="-"  onclick="display.value +='-' " class="orange">
           </div>

